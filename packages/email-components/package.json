{
  "name": "@lmc-eu/jobs-email-components",
  "version": "0.10.2",
  "description": "Email components for mjml jobs email templates.",
  "license": "MIT",
  "publishConfig": {
    "access": "public",
    "directory": "dist"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lmc-eu/jobs-design-system.git",
    "directory": "packages/email-components"
  },
  "engines": {
    "node": ">=16",
    "yarn": "~1.22.19"
  },
  "source": "src/index.ts",
  "main": "lib/index.js",
  "scripts": {
    "css:compile": "sass --load-path=../design-tokens/src/scss src:dist",
    "css:watch": "yarn css:compile --watch",
    "es:lint": "eslint ./",
    "es:lint:fix": "yarn es:lint --fix",
    "format": "yarn format:check",
    "format:check": "prettier --check ./",
    "format:fix": "prettier --write ./",
    "format:fix:changelog": "prettier --write ./CHANGELOG.md",
    "lint": "stylelint --config ../../.stylelintrc.js ./src/**/*.scss",
    "register-components": "node registerComponents.js",
    "build:styles": "shx cp -R src/components/ dist/ && shx rm 'dist/**/*.ts' && shx cp -R src/scss/ dist/ && shx rm -rf dist/scss/foundation",
    "build": "shx rm -rf dist && shx mkdir -p dist/scss && shx cp -r package.json README.md dist/ && yarn build:scripts && yarn build:styles",
    "build:scripts": "tsc",
    "start": "yarn build:scripts && yarn css:compile && yarn build:template",
    "dev": "yarn css:watch & tsc --watch",
    "build:template": "mjml index.mjml -o index.html && mjml ./src/templates/**.mjml -o ./html-output/",
    "dev-template": "mjml --watch index.mjml -o index.html && mjml ./src/templates/**.mjml -o ./html-output/"
  },
  "devDependencies": {
    "@babel/core": "^7.21.0",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.21.0",
    "@babel/register": "^7.21.0",
    "@lmc-eu/eslint-config-base": "^1.1.6",
    "@lmc-eu/eslint-config-react": "^1.1.1",
    "@lmc-eu/jobs-design-tokens": "^1.6.0",
    "@lmc-eu/prettier-config": "^1.2.4",
    "@lmc-eu/spirit-design-tokens": "^0.25.2",
    "@lmc-eu/stylelint-config": "^5.0.0",
    "@types/jest": "^27.0.3",
    "babel-loader": "^9.1.2",
    "css-loader": "^6.7.3",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^4.2.1",
    "fancy-log": "^2.0.0",
    "node-sass": "^8.0.0",
    "prettier": "^2.8.7",
    "sass-loader": "^13.2.2",
    "style-loader": "^3.3.2",
    "stylelint": "^14.11.0",
    "stylelint-config-prettier": "9.0.3",
    "stylelint-prettier": "^2.0.0",
    "typescript": "^4.9.5",
    "yarn": "^1.22.19"
  },
  "dependencies": {
    "@types/mjml": "^4.7.0",
    "@types/mjml-core": "^4.7.1",
    "@types/node": "^18.15.10",
    "mjml": "^4.13.0",
    "mjml-core": "^4.13.0",
    "mjml-validator": "^4.13.0",
    "sass": "^1.60.0"
  }
}
